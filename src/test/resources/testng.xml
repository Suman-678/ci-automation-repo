<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="RegressionSuite" parallel="tests" thread-count="3" verbose="1">
    <listeners>
        <listener class-name="com.demo.listeners.TestListener"/>
    </listeners>
    
    <test name="API Tests" parallel="methods" thread-count="2">
        <classes>
            <class name="com.demo.api.ReqresApiTests">
                <methods>
                    <include name="testGetUsersList"/>
                    <include name="testGetSingleUser"/>
                    <include name="testCreateUser"/>
                    <include name="testUpdatePost"/>
                    <include name="testDeletePost"/>
                    <include name="testGetNonExistentUser"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <test name="UI Tests" parallel="methods" thread-count="1">
        <classes>
            <class name="com.demo.ui.Guru99Tests">
                <methods>
                    <include name="testHomePageTitle"/>
                    <include name="testNavigationLinksPresence"/>
                    <include name="testValidUserLogin"/>
                    <include name="testPageRefreshConsistency"/>
                    <include name="testFlightLinkNavigation"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>