<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="ParallelSuite" parallel="classes" thread-count="4" verbose="1" data-provider-thread-count="3">
    <listeners>
        <listener class-name="com.demo.listeners.TestListener"/>
    </listeners>
    
    <test name="API Tests - Parallel Execution" preserve-order="false">
        <classes>
            <class name="com.demo.api.ReqresApiTests"/>
        </classes>
    </test>
    
    <test name="UI Tests - Sequential Execution" preserve-order="true">
        <classes>
            <class name="com.demo.ui.Guru99Tests"/>
        </classes>
    </test>
</suite>
